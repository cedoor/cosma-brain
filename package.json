{
  "name": "cosma-brain",
  "version": "0.1.0",
  "description": "Second brain knowledge base with Cosma visualization",
  "main": "index.js",
  "scripts": {    
    "start": "pnpm obsidian-to-cosma && pnpm copy",
    "start:open": "pnpm start && pnpm open",
    "modelize": "pnpm obsidian-to-cosma && cosma modelize",
    "obsidian-to-cosma": "node scripts/obsidian-to-cosma.js \"../obsidian/1 - Notes/Learning/Brain/\"",
    "obsidian-to-json": "node scripts/obsidian-to-json.js ./notes",
    "copy": "scp cosmoscope.html velora:~/brain/",
    "open": "open cosmoscope.html"
  },
  "keywords": [
    "knowledge-base",
    "cosma",
    "obsidian"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphlab-fr/cosma": "^2.6.0"
  }
}
